<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">#292929</item>
    </style>


    <style name="AlertDialogCustomDesign" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">#292929</item>
        <item name="android:textColorPrimary">#292929</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">24sp</item>
        <item name="titleTextColor">#292929</item>
        <item name="android:background">@color/dialogBackground</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />
</resources>
